<!-- Many to Many solution -->
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <changeSet author="Chelovek" id="1709071355565-1">
        <createTable tableName="address">
            <column name="id" type="INT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="house_num" type="INT"/>
            <column name="street" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet author="Chelovek" id="1709071355565-2">
        <createTable tableName="hibernate_sequence">
            <column name="next_val" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet author="Chelovek" id="1709071355565-3">
        <createTable tableName="people">
            <column name="id" type="INT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="age" type="INT"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="surname" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet author="Chelovek" id="1709071355565-4">
        <createTable tableName="people_addresses">
            <column name="person_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="address_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="Chelovek" id="1709071355565-5">
        <createIndex indexName="FK2oydowvhp4ta4rod8ir742p4j" tableName="people_addresses">
            <column name="person_id"/>
        </createIndex>
    </changeSet>
    <changeSet author="Chelovek" id="1709071355565-6">
        <createIndex indexName="FK84pmtg5uax9djtc89fbk5e1ot" tableName="people_addresses">
            <column name="address_id"/>
        </createIndex>
    </changeSet>
    <changeSet author="Chelovek" id="1709071355565-7">
        <addForeignKeyConstraint baseColumnNames="person_id" baseTableName="people_addresses"
                                 constraintName="FK2oydowvhp4ta4rod8ir742p4j" deferrable="false"
                                 initiallyDeferred="false" onDelete="RESTRICT" onUpdate="RESTRICT"
                                 referencedColumnNames="id" referencedTableName="people" validate="true"/>
    </changeSet>
    <changeSet author="Chelovek" id="1709071355565-8">
        <addForeignKeyConstraint baseColumnNames="address_id" baseTableName="people_addresses"
                                 constraintName="FK84pmtg5uax9djtc89fbk5e1ot" deferrable="false"
                                 initiallyDeferred="false" onDelete="RESTRICT" onUpdate="RESTRICT"
                                 referencedColumnNames="id" referencedTableName="address" validate="true"/>
    </changeSet>
    <changeSet id="Chelovek" author="1709053616633-4">
        <insert tableName="hibernate_sequence">
            <column name="next_val">0</column>
        </insert>
    </changeSet>
</databaseChangeLog>
